{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "jsx": "react",
    "experimentalDecorators": true,
    "removeComments": false,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "stripInternal": true,
    "skipDefaultLibCheck": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "lib": ["es6", "dom"],
    "newLine": "LF",
    "outDir": "dist",
    "rootDir": "src"
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
